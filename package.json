{
  "name": "bizan-site",
  "version": "1.0.0",
  "description": "Сайт БИЗАН - Next.js 15 + Strapi 4.17",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "--------- РАЗРАБОТКА ---------": "",
    "db:start": "docker-compose -f docker/docker-compose.dev.yml up -d",
    "db:stop": "docker-compose -f docker/docker-compose.dev.yml down",
    "db:restart": "npm run db:stop && npm run db:start",
    "db:logs": "docker-compose -f docker/docker-compose.dev.yml logs -f",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run develop",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" --names \"frontend,backend\" --prefix-colors \"blue,green\"",
    "--------- PRODUCTION ---------": "",
    "prod:build": "docker-compose -f docker/docker-compose.prod.yml build",
    "prod:up": "docker-compose -f docker/docker-compose.prod.yml up -d",
    "prod:down": "docker-compose -f docker/docker-compose.prod.yml down",
    "prod:logs": "docker-compose -f docker/docker-compose.prod.yml logs -f",
    "--------- УСТАНОВКА ---------": "",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "--------- ОЧИСТКА ---------": "",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules frontend/.next backend/.cache backend/build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aiarsenov/bizan_site.git"
  },
  "author": "aiarsenov",
  "license": "MIT",
  "dependencies": {
    "react-imask": "^7.6.1",
    "swiper": "^12.1.0"
  }
}
